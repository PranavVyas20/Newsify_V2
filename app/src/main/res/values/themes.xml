<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme for splash screen -->
    <style name="Theme.MySplash" parent="Theme.SplashScreen">
<!--        // Set the splash screen background, animated icon, and animation duration.-->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/newsify_splash_screen_c2</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
<!--        // Set the theme of the Activity that directly follows your splash screen.-->
        <item name="postSplashScreenTheme">@style/Theme.Newsify</item>  # Required.

    </style>
    <!-- Base application theme. -->
    <style name="Theme.Newsify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black </item>
        <!-- Customize your theme here. -->
    </style>
    <style name='tabTextFont' parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gerbera_med</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>